extends layout

block content
	.container-fluid
		.row
			.col-md-12.col-lg-6
				section
					h1.category-title latest shows:
					div#playlist-carousel.carousel.slide(data-ride='carousel')
						ol.carousel-indicators
							li(data-target='playlist-carousel' data-slide-to='0').active
							li(data-target='playlist-carousel' data-slide-to='1')
							li(data-target='playlist-carousel' data-slide-to='2')
							li(data-target='playlist-carousel' data-slide-to='3')
						.carousel-inner
							.item.active
								.playlist1
									h1.category-headline
										a.playlist1-show(href='#') foood 8/7
									span.helper-text 
										p with 
										p.hosts Will Kent-Daggett, David Clingman, and Miles Margulies
							.item
								.playlist2
									h1.category-headline
										a.playlist2-show(href='#') datpiff 8/7
									span.helper-text 
										p with 
										p.hosts Will Kent-Daggett and Sam Landsberg
							.item
								.playlist3
									h1.category-headline
										a.playlist3-show(href='#') some other random show 8/7
									span.helper-text 
										p with 
										p.hosts a few random people
							.item
								.playlist4
									h1.category-headline.fixie
										a.playlist4-show(href='#') another random show 8/7
									span.helper-text 
										p with 
										p.hosts more randos
						a.left.carousel-control(href='#playlist-carousel' role='button' data-slide='prev')
							span.glyphicon.glyphicon-chevron-left
						a.right.carousel-control(href='#playlist-carousel' role='button' data-slide='next')
							span.glyphicon.glyphicon-chevron-right
			.col-md-12.col-lg-6
				section
					h1.category-title new reviews:
					div#review-carousel.carousel.slide(data-ride='carousel')
						ol.carousel-indicators
							li(data-target='review-carousel' data-slide-to='0').active
							li(data-target='review-carousel' data-slide-to='1')
						.carousel-inner
							.item.active
								.slider-size(style="background: url(http://cdn2.pitchfork.com/albums/20857/homepage_large.cc761557.jpg) center center; background-size: cover;")
								.carousel-caption
									h1.category-headline.fixie
								//- img(src='http://cdn2.pitchfork.com/albums/20857/homepage_large.cc761557.jpg')
							.item
								.slider-size(style="background: url(http://assets.rollingstone.com/assets/images/album_review/they-want-my-soul-20140805/8a851f3a-1406733773.jpg) center center; background-size: cover;")
								.carousel-caption
									h1.category-headline.fixie
								//- img(src='http://assets.rollingstone.com/assets/images/album_review/they-want-my-soul-20140805/8a851f3a-1406733773.jpg')
						a.left.carousel-control(href='#review-carousel' role='button' data-slide='prev')
							span.glyphicon.glyphicon-chevron-left
						a.right.carousel-control(href='#review-carousel' role='button' data-slide='next')
							span.glyphicon.glyphicon-chevron-right
		.row
			.col-xs-12
				h1.category-title top posts:
		.row
			.col-md-12.col-lg-6
				section
					div#pinned
						h1.fixie.category-headline
						p.helper-text by 
							span.fixie
			.col-md-12.col-lg-6
				section
					div#pinned
						h1.fixie.category-headline
						p.helper-text by 
							span.fixie
		include schedule

